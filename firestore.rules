rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Hàm kiểm tra người dùng đã đăng nhập chưa
    function isSignedIn() {
      return request.auth != null;
    }

    // Hàm kiểm tra người dùng có phải chủ sở hữu document không
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rule cho collection dữ liệu người dùng (Giữ nguyên)
    match /artifacts/{appId}/public/data/math_user_data/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- RULE MỚI CHO GÓP Ý (FEEDBACK) ---
    // Cho phép bất kỳ ai đã đăng nhập (kể cả ẩn danh) được TẠO feedback
    // Nhưng KHÔNG cho phép đọc, sửa, xóa (Bảo mật thông tin người gửi)
    match /artifacts/{appId}/public/data/app_feedbacks/{document=**} {
      allow create: if request.auth != null; 
    }

    // Chặn truy cập vào collection tài khoản cũ
    match /artifacts/{appId}/public/data/math_accounts/{document=**} {
      allow read, write: if false;
    }
    
    // Mặc định chặn tất cả các truy cập khác để bảo mật
    match /{document=**} {
      allow read, write: if false;
    }
  }
}